= f.text_field :title, hint: 'This is a text field from effective_bootstrap'
= f.email_field :email, hint: 'This is an email field from effective_bootstrap'
= f.check_box :archived, hint: 'This is a checkbox from effective_bootstrap', id: "archived_#{uid}"
= f.price_field :price, hint: 'This is a price field from effective_bootstrap'

= f.phone_field :phone, hint: 'This is a phone field from effective_bootstrap'
= f.tel_field :fax, hint: 'This is a phone field from effective_bootstrap'
= f.telephone_field :cell, hint: 'This is a phone field from effective_bootstrap'

= f.check_box :option1, inline: true, id: "option1_#{uid}"
= f.check_box :option2, inline: true, id: "option2_#{uid}"
= f.check_box :option3, inline: true, id: "option3_#{uid}"

- f.object.food = 'eggs'
- f.object.color = 'orange'
- f.object.color2 = 'orange'

= f.select :food, EffectiveStyleGuide.foods
= f.select :color, EffectiveStyleGuide.colors
= f.select :color2, EffectiveStyleGuide.grouped_colors


= f.submit
